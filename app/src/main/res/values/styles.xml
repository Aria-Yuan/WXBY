    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/unselector_item_color</item>
        <item name="colorPrimaryDark">@color/unselector_item_color</item>
        <item name="colorAccent">@color/selector_item_color</item>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lawyer_consult_single_lawyer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:paddingTop="4dp">

    <ImageView
        android:id="@+id/lawyer_consult_single_limage"
        android:layout_width="59dp"
        android:layout_height="62dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lawyer" />

    <TextView
        android:id="@+id/lawyer_consult_single_branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/lawyer_consult_single_limage"
        app:layout_constraintTop_toBottomOf="@+id/lawyer_consult_single_name" />

    <TextView
        android:id="@+id/lawyer_consult_single_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/selector_item_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lawyer_consult_single_special"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/lawyer_consult_single_limage"
        app:layout_constraintTop_toBottomOf="@+id/lawyer_consult_single_branch" />

    <TextView
        android:id="@+id/lawyer_consult_single_responce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_green_margin_button"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="TextView"
        android:textColor="@color/selector_item_color"
        app:layout_constraintStart_toEndOf="@+id/lawyer_consult_single_limage"
        app:layout_constraintTop_toBottomOf="@+id/lawyer_consult_single_special" />

    <TextView
        android:id="@+id/lawyer_consult_single_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lawyer_consult_single_name"
        app:layout_constraintStart_toEndOf="@+id/lawyer_consult_single_name" />

    <TextView
        android:id="@+id/lawyer_consult_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="TextView"
        android:textColor="@color/title"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/lawyer_consult_single_limage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="22dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toStartOf="@+id/lawyer_consult_single_rate"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/lawyer_consult_single_rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lawyer_consult_single_fee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="3dp"
        android:background="#efefef"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lawyer_consult_single_rate"/>

</android.support.constraint.ConstraintLayout>
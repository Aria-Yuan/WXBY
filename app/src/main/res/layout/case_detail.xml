<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_firm_pager_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/background"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/back1"
            android:textColor="@color/colorWhite"
            android:textSize="8pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="案件內容"
            android:textColor="@color/colorAccent"
            android:textSize="10pt" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="9dp"
            android:paddingEnd="6dp"
            android:paddingTop="8dp"
            android:src="@drawable/shoucang" />
    </android.support.v7.widget.LinearLayoutCompat>

    <ScrollView
        android:id="@+id/law_firm_result_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_firm_pager_bar"
        android:layout_alignParentStart="true"
        android:background="#efefef">

    <LinearLayout
        android:id="@+id/law_firm_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#efefef"
        android:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/background">

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="裁判字號"
                android:textColor="@color/colorWhite"
                android:textSize="10pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="103,簡版,1234"
                android:textSize="9pt" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/background">

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="裁判日期"
                android:textColor="@color/colorWhite"
                android:textSize="10pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="民國103年9月24日"
                android:textSize="9pt" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/background">

            <TextView
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="裁判案由"
                android:textColor="@color/colorWhite"
                android:textSize="10pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:text="返還房屋租賃"
                android:textSize="9pt" />

        </android.support.v7.widget.LinearLayoutCompat>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/background"
            android:gravity="center"
            android:text="判決正文"
            android:textColor="@android:color/background_dark"
            android:textSize="9pt" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="2dp"
                android:text="*"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="檢索字彙"
                android:textSize="9pt" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/line_z" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="含有"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_home_pager_toolbar_search_view"
                        android:drawableStart="@drawable/search"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/selector_item_color"
                        android:textColorHint="#8a8a8a">

                        <EditText
                            android:id="@+id/keyword"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="fill_vertical|start"
                            android:hint="請選擇"
                            android:inputType="text"
                            android:lines="1"
                            android:paddingStart="10dp"
                            android:textColor="#515151"
                            android:textColorHint="#8a8a8a"
                            android:textSize="7pt" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="且含"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_home_pager_toolbar_search_view"
                        android:drawableStart="@drawable/search"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/selector_item_color"
                        android:textColorHint="#8a8a8a">

                        <EditText
                            android:id="@+id/and"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="fill_vertical|start"
                            android:hint="請選擇"
                            android:inputType="text"
                            android:lines="1"
                            android:paddingStart="10dp"
                            android:textColor="#515151"
                            android:textColorHint="#8a8a8a"
                            android:textSize="7pt" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="或"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RelativeLayout
                        android:layout_width="239dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_home_pager_toolbar_search_view"
                        android:drawableStart="@drawable/search"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/selector_item_color"
                        android:textColorHint="#8a8a8a">

                        <EditText
                            android:id="@+id/or"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="fill_vertical|start"
                            android:hint="請選擇"
                            android:inputType="text"
                            android:lines="1"
                            android:paddingStart="10dp"
                            android:textColor="#515151"
                            android:textColorHint="#8a8a8a"
                            android:textSize="7pt" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="不含"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_home_pager_toolbar_search_view"
                        android:drawableStart="@drawable/search"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/selector_item_color"
                        android:textColorHint="#8a8a8a">

                        <EditText
                            android:id="@+id/not"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="fill_vertical|start"
                            android:hint="請選擇"
                            android:inputType="text"
                            android:lines="1"
                            android:paddingStart="10dp"
                            android:textColor="#515151"
                            android:textColorHint="#8a8a8a"
                            android:textSize="7pt" />

                    </RelativeLayout>

                </LinearLayout>

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="end"-->
                    <!--android:layout_marginTop="6dp"-->
                    <!--android:gravity="right|end"-->
                    <!--android:paddingEnd="10dp"-->
                    <!--android:text="含有為必填項，且含、或、不含請擇一填入"-->
                    <!--android:textColor="@android:color/holo_red_dark" />-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:text="檢索範圍"
                android:textSize="9pt" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/line_z" />

            <RelativeLayout
                android:id="@+id/rlSearchFrameDeletec"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_home_pager_toolbar_search_view"
                android:drawableStart="@drawable/search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/selector_item_color"
                android:textColorHint="#8a8a8a">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="fill_vertical|start"
                    android:hint="檢索範圍"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingStart="10dp"
                    android:textColor="#515151"
                    android:textColorHint="#8a8a8a"
                    android:textSize="7pt" />

                <ImageView
                    android:id="@+id/ivDeleteTextc"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="5dp"
                    android:paddingRight="6dp"
                    android:src="@drawable/delete"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="2dp"
                android:text="*"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="8pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="檢索項目"
                android:textSize="9pt" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/line_z" />

            <RadioGroup
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="25dp">

                <RadioButton
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="法規名稱"
                    android:textColor="@color/selector_item_color"
                    android:textSize="8pt" />

                <RadioButton
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="法規內容"
                    android:textColor="@color/selector_item_color"
                    android:textSize="8pt" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:text="有效狀態"
                android:textSize="9pt" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/line_z" />

            <RadioGroup
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="10dp">

                <RadioButton
                    android:id="@+id/valid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:shadowColor="@color/selector_item_color"
                    android:text="現行法規"
                    android:textColor="@color/selector_item_color"
                    android:textSize="8pt" />

                <RadioButton
                    android:id="@+id/abandon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:shadowColor="@color/selector_item_color"
                    android:text="已廢除法規"
                    android:textColor="@color/selector_item_color"
                    android:textColorLink="@color/selector_item_color"
                    android:textSize="8pt" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:text="期         間"
                android:textSize="9pt" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/line_z" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="開始時間"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RelativeLayout
                        android:id="@+id/startDate"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_home_pager_toolbar_search_view"
                        android:drawableStart="@drawable/search"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/selector_item_color"
                        android:textColorHint="#8a8a8a">

                        <TextView
                            android:id="@+id/start"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:gravity="fill_vertical|start"
                            android:hint="請選擇"
                            android:inputType="text"
                            android:lines="1"
                            android:paddingStart="10dp"
                            android:textColor="#515151"
                            android:textColorHint="#8a8a8a"
                            android:textSize="7pt"
                            android:clickable="true"
                            android:focusable="true"/>

                        <ImageView
                            android:id="@+id/down_start"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:padding="5dp"
                            android:src="@drawable/delete"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:text="結束時間"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RelativeLayout
                        android:id="@+id/endDate"
                        android:layout_width="0dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/style_home_pager_toolbar_search_view"
                        android:drawableStart="@drawable/search"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:gravity="center"
                        android:lines="1"
                        android:textColor="@color/selector_item_color"
                        android:textColorHint="#8a8a8a">

                        <TextView
                            android:id="@+id/end"
                            android:layout_width="match_parent"
                            android:layout_height="32dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="fill_vertical|start"
                            android:hint="請選擇"
                            android:inputType="text"
                            android:lines="1"
                            android:paddingStart="10dp"
                            android:textColor="#515151"
                            android:textColorHint="#8a8a8a"
                            android:textSize="7pt" />

                        <ImageView
                            android:id="@+id/down_end"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:padding="5dp"
                            android:src="@drawable/delete"
                            android:visibility="gone" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="100dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="10dp"
                android:text="發文文號"
                android:textSize="9pt" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/line_z" />

            <RelativeLayout
                android:id="@+id/rlSearchFrameDeletey"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/style_home_pager_toolbar_search_view"
                android:drawableStart="@drawable/search"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/selector_item_color"
                android:textColorHint="#8a8a8a">

                <EditText
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:gravity="fill_vertical|start"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingStart="10dp"
                    android:textColor="#515151"
                    android:textColorHint="#8a8a8a"
                    android:textSize="7pt" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="號"
                android:textColor="@color/selector_item_color"
                android:textSize="8pt" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
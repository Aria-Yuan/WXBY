<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_firm_pager_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@android:color/white"
        android:gravity="center_vertical|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@android:color/transparent"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/back1"
            android:textColor="@color/colorWhite"
            android:textSize="8pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="律所介紹"
            android:textColor="@color/selector_item_color"
            android:textSize="10pt" />

        <ImageView
            android:id="@+id/like"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingBottom="9dp"
            android:paddingEnd="6dp"
            android:paddingTop="8dp"
            android:src="@drawable/shoucang" />
    </android.support.v7.widget.LinearLayoutCompat>

    <ScrollView
        android:id="@+id/law_firm_result_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_firm_pager_bar"
        android:layout_marginBottom="60dp"
        android:background="#efefef">

        <LinearLayout
            android:id="@+id/law_firm_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:text="XXXXXXXX事務所"
                        android:textSize="10pt" />

                    <TextView
                        android:id="@+id/tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="6dp"
                        android:text="emmm"
                        android:textColor="@android:color/holo_orange_dark"
                        android:textSize="8pt" />

                </LinearLayout>

                <Button
                    android:id="@+id/follow"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical|center"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/button"
                    android:text="關注"
                    android:textColor="@color/colorWhite"
                    android:textSize="10pt" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/district" />

                <TextView
                    android:id="@+id/addr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="地址：新北市新莊區中正路510號"
                    android:textSize="8pt" />


            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/phone" />

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="電話：020 0000000"
                    android:textSize="8pt" />

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="律所簡介"
                    android:textColor="@android:color/black"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:text="打不死人按不高於哈說不定就能VJSD納入女生的拘泥放入面深VID你身邊幾點上班馮如杯是介紹的你發你發我讓個別用熱水"
                    android:textSize="8pt" />

                <TextView
                    android:layout_width="390dp"
                    android:layout_height="2dp"
                    android:layout_gravity="right"
                    android:background="#efefef" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="主要業務"
                    android:textColor="@android:color/black"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/major"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:text="打不死人按不高於哈說不定就能VJSD納入女生的拘泥放入面深VID你身邊幾點上班馮如杯是介紹的你發你發我讓個別用熱水"
                    android:textSize="8pt" />


            </android.support.v7.widget.LinearLayoutCompat>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/selector_item_color"
        android:text="聯繫事務所"
        android:textColor="@android:color/white"
        android:textSize="9pt" />
</RelativeLayout>
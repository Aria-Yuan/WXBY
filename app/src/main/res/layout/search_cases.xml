<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfbfb"
    tools:context=".SearchCasesActivity">

    <android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_firm_pager_bar"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/selector_item_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:src="@drawable/back"
            android:textColor="@color/selector_item_color"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/et_search"
            android:layout_width="274dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="找案件"
            android:textColor="@color/background"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:src="@drawable/inform0"
            android:text="提交"
            android:textColor="@color/background"
            android:textSize="9pt" />
    </android.support.v7.widget.LinearLayoutCompat>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_firm_pager_bar"
        android:layout_marginRight="5dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="檢索字彙"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeletek"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/keyword"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:hint="檢索詞彙"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                    <ImageView
                        android:id="@+id/ivDeleteTextk"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:paddingRight="6dp"
                        android:src="@drawable/delete"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="裁判字號"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeletey"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/year"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="年"
                    android:textColor="@color/selector_item_color"
                    android:textSize="8pt" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeletez"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/zihao"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="字  第"
                    android:textColor="@color/selector_item_color"
                    android:textSize="8pt" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeleteyn"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/number"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="號"
                    android:textColor="@color/selector_item_color"
                    android:textSize="8pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="地院範圍"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingRight="10dp">

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="僅一般案件"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="僅簡易案件"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="裁判類別"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RadioGroup
                    android:id="@+id/type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingEnd="100dp">

                    <RadioButton
                        android:id="@+id/caidin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:shadowColor="@color/selector_item_color"
                        android:text="裁定"
                        android:textColor="@color/selector_item_color"
                        android:textSize="8pt" />

                    <RadioButton
                        android:id="@+id/panjue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:shadowColor="@color/selector_item_color"
                        android:text="判決"
                        android:textColor="@color/selector_item_color"
                        android:textColorLink="@color/selector_item_color"
                        android:textSize="8pt" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="10dp"
                    android:text="裁判期別"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:text="開始時間"
                            android:textColor="@color/selector_item_color"
                            android:textSize="8pt" />

                        <RelativeLayout
                            android:id="@+id/startDate"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_home_pager_toolbar_search_view"
                            android:drawableStart="@drawable/search"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="@color/selector_item_color"
                            android:textColorHint="#8a8a8a">

                            <TextView
                                android:id="@+id/start"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="fill_vertical|start"
                                android:hint="請選擇"
                                android:inputType="text"
                                android:lines="1"
                                android:paddingStart="10dp"
                                android:textColor="#515151"
                                android:textColorHint="#8a8a8a"
                                android:textSize="7pt"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="onClick"/>

                            <ImageView
                                android:id="@+id/down_start"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:padding="5dp"
                                android:src="@drawable/delete"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="10dp"
                            android:text="結束時間"
                            android:textColor="@color/selector_item_color"
                            android:textSize="8pt" />

                        <RelativeLayout
                            android:id="@+id/endDate"
                            android:layout_width="0dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/style_home_pager_toolbar_search_view"
                            android:drawableStart="@drawable/search"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center"
                            android:lines="1"
                            android:textColor="@color/selector_item_color"
                            android:textColorHint="#8a8a8a">

                            <TextView
                                android:id="@+id/end"
                                android:layout_width="match_parent"
                                android:layout_height="32dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="fill_vertical|start"
                                android:hint="請選擇"
                                android:inputType="text"
                                android:lines="1"
                                android:paddingStart="10dp"
                                android:textColor="#515151"
                                android:textColorHint="#8a8a8a"
                                android:textSize="7pt"
                                android:clickable="true"
                                android:focusable="true"
                                android:onClick="onClick"/>

                            <ImageView
                                android:id="@+id/down_end"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:padding="5dp"
                                android:src="@drawable/delete"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="裁判案由"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeleter"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:hint="裁判案由"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                    <ImageView
                        android:id="@+id/ivDeleteTextr"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:paddingRight="6dp"
                        android:src="@drawable/delete"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="裁判主文"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeletec"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/content"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:hint="裁判主文"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                    <ImageView
                        android:id="@+id/ivDeleteTextc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:paddingRight="6dp"
                        android:src="@drawable/delete"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"
                    android:text="承審法官"
                    android:textSize="9pt" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/line_z" />

                <RelativeLayout
                    android:id="@+id/rlSearchFrameDeletej"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/style_home_pager_toolbar_search_view"
                    android:drawableStart="@drawable/search"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/selector_item_color"
                    android:textColorHint="#8a8a8a">

                    <EditText
                        android:id="@+id/judge"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@null"
                        android:gravity="fill_vertical|start"
                        android:hint="裁審法官"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingStart="10dp"
                        android:textColor="#515151"
                        android:textColorHint="#8a8a8a"
                        android:textSize="7pt" />

                    <ImageView
                        android:id="@+id/ivDeleteTextj"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:paddingRight="6dp"
                        android:src="@drawable/delete"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>